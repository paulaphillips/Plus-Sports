<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contratação de Treinamento Personalizado</title>

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Nome do aplicativo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            
            <div div class="navbar-collapse collapse">
                <a class="navbar-brand" style="width: 12%;height: 12%; margin-top: 10px;">
                    <img src="~/Images/logoPlusSports.png" />
                </a>
                <ul class="nav navbar-nav" style="margin-top: 20px;">
                    <li>@Html.ActionLink("Início", "Index", "Home")</li>
                    <li>@Html.ActionLink("Login", "Login", "Home")</li>
                    @if (@Session["TIPO"] != null)
    {
        if (@Session["TIPO"].ToString() == "P")
        {


                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Modalidades", "Home")">Serviços</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("MeuPerfil", "Home")"> Meu Perfil</a>
                </li>

}

if (@Session["TIPO"].ToString() == "U")
{
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Mod", "Home")">Modalidades</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Agendamentos", "Home")"> Agendamentos</a>
                </li>
}
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("LogOut", "Home")">Log Out</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Autorizar", "Servicos")">Log Out</a>
                </li>
}
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        @*<footer>
                <p>&copy; @DateTime.Now.Year - Meu Aplicativo ASP.NET</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
